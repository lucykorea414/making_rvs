<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="468" Width="631">
    <Grid Margin="0,0,0,-16">
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="90" Margin="0,10,0,0" VerticalAlignment="Top" Width="611"/>
        <Button x:Name="getFlagButton" Content="Get Flag" HorizontalAlignment="Left" Height="35" Margin="488,36,0,0" VerticalAlignment="Top" Width="103" FontSize="18" Background="Red" Foreground="White" Click="getFlagButton_Click"/>
        <CheckBox x:Name="adminCheckBox" Content="Check if Admin" HorizontalAlignment="Left" Height="22" Margin="52,49,0,0" VerticalAlignment="Top" Width="147" FontSize="14" Checked="adminCheckBox_Checked" RenderTransformOrigin="-1.507,1.522"/>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Height="319" Margin="0,105,0,0" VerticalAlignment="Top" Width="611">
            <TextBox x:Name="logTextBox" TextWrapping="Wrap" ScrollViewer.CanContentScroll="True" Text="[Log]"/>
        </Border>

    </Grid>
</Window>
